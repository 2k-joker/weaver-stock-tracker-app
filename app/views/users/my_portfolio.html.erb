<h1 class="text-white">My Portfolio</h1>

<div class="search-area">
  <h3 class="text-white">Search</h3>
  <%= form_tag search_stock_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: 'company name',
          autofocus: true, class: 'form-control' %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon 'search 1.5x' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="stock-results">

</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>